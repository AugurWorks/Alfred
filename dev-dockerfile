FROM alpine:latest

# Gradle environment variables
ENV GRADLE_VERSION 2.12
ENV GRADLE_HOME /usr/local/gradle
ENV PATH ${PATH}:${GRADLE_HOME}/bin
ENV GRADLE_USER_HOME /gradle

RUN apk update && \
    apk add --no-cache openjdk8

WORKDIR /usr/local

RUN apk add --no-cache wget bash libstdc++ && \

    # Install Gradle
    wget  https://services.gradle.org/distributions/gradle-$GRADLE_VERSION-bin.zip --no-check-certificate && \
    unzip gradle-$GRADLE_VERSION-bin.zip && \
    rm -f gradle-$GRADLE_VERSION-bin.zip && \
    ln -s gradle-$GRADLE_VERSION gradle && \
    echo -ne "- with Gradle $GRADLE_VERSION\n" >> /root/.built && \

    # Build WAR file
    mkdir -p /app && \
    mkdir -p /gradle && \
    mkdir -p /app/grails-app/init

COPY build.gradle /app
COPY gradle.properties /app
COPY grails-app/init /app/grails-app/init

WORKDIR /app

RUN gradle build

# Add app files
COPY . /app

RUN gradle bootRepackage && \

    # Copy WAR into Tomcat
    mv build/libs/alfred*?.war /app/alfred.war

# Expose port and volume
EXPOSE 8080

CMD java -jar /app/alfred.war
